generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:lightt@localhost:5432/carbonable-dapp"
}

model SimulatorConfig {
  id     String @id @default(uuid())
  type   String @unique
  config Json
}

model SimulatorAnalytics {
  id        String        @id @default(uuid())
  createdAt DateTime      @default(now())
  type      AnalyticsType
  value     Int
}

model Projects {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  name         String
  slug         String   @unique
  saleIsOpen   Boolean  @default(false)
  isSoldOut    Boolean  @default(false)
  saleDate     DateTime
  contentReady Boolean  @default(false)
}

enum AnalyticsType {
  YIELD
  OFFSET
}
